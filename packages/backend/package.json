{
  "name": "@market-security/backend",
  "version": "1.0.0",
  "description": "Backend API for Market Security System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "migration:create": "typeorm migration:create",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/config/database.ts",
    "migration:run:prod": "typeorm migration:run -d ./dist/config/database.js",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/config/database.ts",
    "migration:revert:prod": "typeorm migration:revert -d ./dist/config/database.js",
    "create-user": "ts-node src/scripts/create-user.ts",
    "create-user:prod": "node dist/scripts/create-user.js",
    "check:last:bip": "ts-node src/commands/check-last-bip.command.ts",
    "check:last:bip:prod": "node dist/commands/check-last-bip.command.js",
    "run:daily:verification": "ts-node src/commands/daily-verification.command.ts",
    "run:daily:verification:prod": "node dist/commands/daily-verification.command.js",
    "seed:configurations": "ts-node src/scripts/seed-configurations.ts",
    "seed:configurations:prod": "node dist/scripts/seed-configurations.js",
    "seed": "node dist/scripts/seed-configurations.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.4",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.34.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
